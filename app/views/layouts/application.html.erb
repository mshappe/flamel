<!DOCTYPE html>
<html>
<head>
  <title>Flamel</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%- flash.each do |key, msg| -%>
    <div id="<%= key %>">
      <p style="float:right;"><%= link_to_function 'X', "$('##{key}').fadeOut(0)" %></p>

      <p><%= msg %></p>

      <div class="clear"></div>
    </div>
    <script type="text/javascript">
        $( '#<%= key %>' ).fadeOut( 10000 );
    </script>
<%- end -%>

<%= yield %>

</body>
</html>
